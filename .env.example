# Шаблон конфигурации для VPN Bot
# Скопируйте этот файл в .env и заполните реальными значениями

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ TELEGRAM BOT
# ------------------------------------------------------------------
TELEGRAM_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ
BOT_USERNAME=your_bot_username
ADMIN_IDS=123456789,987654321

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ БАЗЫ ДАННЫХ
# ------------------------------------------------------------------
DB_PATH=./data/vpnbot.db
DB_BACKUP_PATH=./data/vpnbot.db.backup

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ ПЛАТЕЖЕЙ
# ------------------------------------------------------------------
# Crypto Pay (https://t.me/CryptoBot)
CRYPTO_PAY_TOKEN=123456:ABCDEF...
CRYPTO_PAY_API_URL=https://pay.crypt.bot/api
CRYPTO_PAY_WEBHOOK_SECRET=your_webhook_secret

# YooKassa (https://yookassa.ru/)
YOOKASSA_SHOP_ID=123456
YOOKASSA_SECRET_KEY=test_ABCDEFGHIJKLMNOPQRSTUVWXYZ
YOOKASSA_API_URL=https://api.yookassa.ru/v3

# Общие настройки платежей
PAYMENT_CURRENCY=RUB
PAYMENT_TIMEOUT=900

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ СЕРВЕРА WIREGUARD
# ------------------------------------------------------------------
SERVER_IP=your.server.ip.address
SERVER_PUBLIC_KEY=ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890+/
WG_PORT=51820
WG_INTERFACE=wg0
WG_CONFIG_PATH=/etc/wireguard/wg0.conf
WG_SUBNET=10.13.13.0/24
WG_DNS=1.1.1.1, 8.8.8.8
WG_MTU=1420
WG_KEEPALIVE=25

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ WEBHOOK И WEB
# ------------------------------------------------------------------
WEBHOOK_HOST=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# YooKassa webhook
YOOKASSA_WEBHOOK_URL=https://your-domain.com/yookassa_webhook

# Web приложение
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8000
WEBAPP_DOMAIN=your-domain.com

# ------------------------------------------------------------------
# SSL/TLS КОНФИГУРАЦИЯ
# ------------------------------------------------------------------
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_ENABLED=false

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ ГЕЙМИФИКАЦИИ
# ------------------------------------------------------------------
# Пробный период
TRIAL_DAYS=10
TRIAL_ENABLED=true

# Реферальная система
REFERRAL_BONUS_FIRST=10
REFERRAL_BONUS_SUBSEQUENT=5
REFERRAL_ENABLED=true

# Ежедневный бонус
DAILY_BONUS_MIN=1
DAILY_BONUS_MAX=3
DAILY_BONUS_ENABLED=true

# ------------------------------------------------------------------
# КОНФИГУРАЦИЯ ЛОГИРОВАНИЯ
# ------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s
LOG_FILE=./logs/bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ------------------------------------------------------------------
# МОНИТОРИНГ И ОБСЛУЖИВАНИЕ
# ------------------------------------------------------------------
CLEANUP_INTERVAL=3600
BACKUP_INTERVAL=86400
MONITORING_ENABLED=true

# ------------------------------------------------------------------
# ВНЕШНИЕ СЕРВИСЫ
# ------------------------------------------------------------------
INSTRUCTIONS_IMAGE_URL=https://raw.githubusercontent.com/chiicreative/vpn-bot-ui/main/images/setup_instructions.png
TELEGRAM_API_URL=https://api.telegram.org

# ------------------------------------------------------------------
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ------------------------------------------------------------------
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=300
SESSION_TIMEOUT=86400
WEBHOOK_SECRET_KEY=your_webhook_secret_key

# ------------------------------------------------------------------
# ПРИМЕРЫ КОНФИГУРАЦИИ ДЛЯ РАЗНЫХ СРЕД
# ------------------------------------------------------------------

# Для разработки (локальная среда)
# DB_PATH=./data/dev.db
# LOG_LEVEL=DEBUG
# WEBAPP_PORT=8080

# Для продакшена (сервер)
# DB_PATH=/var/lib/vpnbot/data.db
# LOG_LEVEL=WARNING
# SSL_ENABLED=true
# WEBHOOK_HOST=https://your-domain.com
